{
  "plugins": [
    "html"
  ],
  "extends": "airbnb-base",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
  },
  "rules": {
    "comma-dangle": ["error", "never"],
    "max-len": 0,
    "no-console": 0,
    "no-use-before-define": 0,
  }
}
