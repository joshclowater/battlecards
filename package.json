{
  "version": "0.2.3",
  "name": "battlecards",
  "description": "Two player battle card game",
  "author": "Josh Clowater <josh.clowater@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/joshclowater/battlecards"
  },
  "license": "MPL-2.0",
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "engines": {
    "node": ">= 8.0.0",
    "npm": ">= 5.0.0"
  },
  "scripts": {
    "dev": "node build/dev-server.js",
    "start": "npm run build",
    "build": "node build/build.js; node build/prod-server.js",
    "debug": "node build/build.js; node --debug --nolazy build/prod-server.js",
    "unit": "cross-env BABEL_ENV=test karma start test/unit/karma.conf.js --single-run",
    "e2e": "node test/e2e/runner.js",
    "test": "npm run unit && npm run e2e",
    "lint": "eslint --ext .js,.vue src test/unit/specs test/e2e/specs",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,vue}": "eslint",
    "test/unit/specs/*.js": "eslint",
    "test/e2e/specs/*.js": "eslint"
  },
  "pre-commit": "lint-staged, test",
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.22.0",
    "babel-register": "^6.26.0",
    "chalk": "^1.1.3",
    "copy-webpack-plugin": "^4.3.1",
    "css-loader": "^0.28.7",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.3.2",
    "eslint-friendly-formatter": "^2.0.7",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-html": "^2.0.0",
    "eslint-plugin-import": "^2.8.0",
    "express": "^4.16.2",
    "extract-text-webpack-plugin": "^2.0.0",
    "friendly-errors-webpack-plugin": "^1.1.3",
    "html-webpack-plugin": "^2.30.1",
    "lodash": "^4.17.4",
    "optimize-css-assets-webpack-plugin": "^1.3.0",
    "ora": "^1.2.0",
    "rimraf": "^2.6.2",
    "semver": "^5.4.1",
    "shelljs": "^0.7.6",
    "socket.io": "^1.7.4",
    "socket.io-client": "^1.7.4",
    "url-loader": "^0.5.8",
    "uuid": "^3.1.0",
    "vue": "^2.5.13",
    "vue-loader": "^12.2.2",
    "vue-router": "^3.0.1",
    "vue-style-loader": "^3.0.3",
    "vue-template-compiler": "^2.5.13",
    "vuex": "^3.0.1",
    "webpack": "^2.7.0",
    "webpack-bundle-analyzer": "^2.9.1",
    "webpack-merge": "^4.1.1"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.2",
    "babel-plugin-istanbul": "^4.1.5",
    "chai": "^3.5.0",
    "chromedriver": "^2.34.0",
    "connect-history-api-fallback": "^1.5.0",
    "cross-env": "^4.0.0",
    "cross-spawn": "^5.0.1",
    "eventsource-polyfill": "^0.9.6",
    "es6-promise": "^4.2.2",
    "file-loader": "^0.11.1",
    "http-proxy-middleware": "^0.17.3",
    "inject-loader": "^3.0.1",
    "karma": "^1.7.1",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.2",
