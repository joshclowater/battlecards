{
  "name": "battlecards",
  "description": "Battle card game",
  "version": "0.0.1-SNAPSHOT",
  "repository": {
    "type": "git",
    "url": "https://github.com/joshclowater/battlecards"
  },
  "main": "src/nodejs/server.js",
  "scripts": {
    "dev": "npm run build:js; concurrently \"npm run serve\" \"npm run watch:js\"",
    "serve": "nodemon src/nodejs/server.js",
    "start": "npm run buildprod:js; node src/nodejs/server.js",
    "watch:js": "watchify src/vue/app.js -t vueify -t babelify -p browserify-hmr -p [ vueify/plugins/extract-css -o public/styles.bundle.css ] -o public/app.bundle.js",
    "build:js": "browserify src/vue/app.js -t vueify -p [ vueify/plugins/extract-css -o public/styles.bundle.css ] -t babelify -o public/app.bundle.js",
    "buildprod:js": "NODE_ENV=production browserify src/vue/app.js -g envify -t vueify -p [ vueify/plugins/extract-css -o public/styles.bundle.css ] -t babelify -o public/app.bundle.js",
    "eslint": "eslint --ext .js --ext .vue .",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint"
  },
  "pre-commit": "lint-staged",
  "engines": {
    "npm": ">=4.0.0",
    "node": ">=7.0.0"
  },
  "dependencies": {
    "axios": "^0.15.3",
    "babel-core": "^6.23.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-runtime": "^6.23.0",
    "babelify": "^7.3.0",
    "body-parser": "^1.14.1",
    "browserify": "^14.1.0",
    "browserify-hmr": "^0.3.5",
    "ejs": "^2.5.6",
    "envify": "^4.0.0",
    "eslint": "^3.16.1",
    "express": "^4.13.3",
    "lodash": "^4.17.4",
    "morgan": "^1.6.1",
    "socket.io": "^1.3.7",
    "socket.io-client": "^1.7.3",
    "uuid": "^3.0.1",
    "vue": "^2.1.10",
    "vueify": "^9.4.0"
  },
  "devDependencies": {
    "concurrently": "^3.3.0",
    "eslint": "^3.16.1",
    "eslint-config-airbnb-base": "^11.1.0",
    "eslint-plugin-html": "^2.0.1",
    "eslint-plugin-import": "^2.2.0",
    "lint-staged": "^3.3.1",
    "nodemon": "^1.11.0",
    "pre-commit": "^1.2.2",
    "vue-hot-reload-api": "^2.0.9",
    "watchify": "^3.9.0"
  },
  "license": "MPL-2.0"
}
