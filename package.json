    "mocha": "^3.5.3",
    "nightwatch": "^0.9.19",
    "opn": "^4.0.2",
    "phantomjs-prebuilt": "^2.1.16",
    "pre-commit": "^1.2.2",
    "selenium-server": "^3.8.1",
    "sinon": "^2.4.1",
    "sinon-chai": "^2.14.0",
    "webpack-dev-middleware": "^1.12.2",
    "webpack-hot-middleware": "^2.21.0"
  }
